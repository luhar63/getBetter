{
  "name": "getbetter",
  "productName": "getBetter",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "index.js",
  "engines": {
    "node": "12.18.3"
  },
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron . --enable-logging --remote-debugging-port=9222",
    "electromon": "electromon .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder build",
    "test": "mocha test --exclude test/main.js",
    "test-e2e": "mocha test/main.js",
    "test-single": "mocha $1",
    "tdd": "mocha --watch test",
    "lint": "./node_modules/.bin/standard",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "macBuild": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=build/icon.icns --prune=true --out=release-builds",
    "windowBuild": "electron-packager . getBetter --overwrite --asar=true --platform=win32 --arch=ia32 --icon=build/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName='getBetter'",
    "linuxBuild": "electron-packager . getBetter --overwrite --asar=true --platform=linux --arch=x64 --icon=app/images/app-icons/icon.png --prune=true --out=release-builds"
  },
  "keywords": [],
  "author": {
    "name": "Rahul Maurya",
    "email": "rahulmaurya.mnnit@gmail.com"
  },
  "standard": {
    "globals": [
      "it",
      "describe",
      "before",
      "after",
      "beforeEach",
      "afterEach",
      "Audio",
      "fetch",
      "Notification",
      "alert"
    ],
    "ignore": [
      "sun.js"
    ]
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "getBetter"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3",
    "@meetfranz/electron-notification-state": "^1.0.0",
    "electron-log": "^4.3.2",
    "electron-squirrel-startup": "^1.0.0",
    "i18next": "^19.8.9",
    "i18next-node-fs-backend": "^2.1.3",
    "luxon": "^1.26.0",
    "meeussunmoon": "^3.0.3",
    "semver": "^7.3.4"
  },
  "devDependencies": {}
}
